{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "target": "es2022",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,

    /* Transpilation */
    "module": "NodeNext",
    "noEmit": true,

    /* Misc */
    "lib": ["es2022"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}